<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/remRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        android:text="- red"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addRed"
        app:layout_constraintEnd_toStartOf="@+id/remGreen"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        android:text="+ red"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/remRed"
        app:layout_constraintEnd_toStartOf="@+id/addGreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorPreview"/>

    <Button
        android:id="@+id/addGreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        android:text="+ green"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/remGreen"
        app:layout_constraintEnd_toStartOf="@+id/addBlue"
        app:layout_constraintStart_toEndOf="@+id/addRed"
        app:layout_constraintTop_toBottomOf="@+id/colorPreview" />

    <Button
        android:id="@+id/remGreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        android:text="- green"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addGreen"
        app:layout_constraintEnd_toStartOf="@id/remBlue"
        app:layout_constraintStart_toEndOf="@id/remRed" />

    <Button
        android:id="@+id/addBlue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+ blue"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/remBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintStart_toEndOf="@+id/addGreen"
        app:layout_constraintTop_toBottomOf="@+id/colorPreview" />

    <Button
        android:id="@+id/remBlue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cornerRadius="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        android:text="- blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/remGreen" />

    <Button
        android:id="@+id/colorPreview"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        android:text="Button"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/addGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>